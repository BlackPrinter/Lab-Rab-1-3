// 2. Ввести целое трехзначное число в консоли и найти сумму цифр этого трехзначного числа

import java.util.Scanner;
public class Main
{
    public static void main(String[] args)
    {
        System.out.println("Введите трехзначное число:");
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b = 0;
        while (b<=0)
        {
            if (a >= 999 || a <= 100)
            {
                System.out.println("Вы ввели не трехзначное число");
                System.out.println("Попробуйте снова");
                System.out.println("Введите трехзначное число:");
                Scanner sc2 = new Scanner(System.in);
                a = sc2.nextInt();
            }
            if (a <= 999 && a >= 100)
            {
                System.out.println("Вы ввели трехзначное число");
                System.out.println("Это число равно:" + a);
                b= b+1;
            }
        }
        sc.close();
        int v = (a / 100) + ((a / 10) % 10) + (a % 10);
        System.out.println("Сумма цифр числа a равна:" + v);
    }
}
